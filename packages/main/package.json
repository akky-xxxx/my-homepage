{
  "name": "main",
  "version": "0.0.0",
  "author": "akky-xxxx <114.s.aki@gmail.com>",
  "private": true,
  "repository": "https://github.com/akky-xxxx/my-homepage.git",
  "scripts": {
    "build:prod": "next build",
    "check-all": "run-p lint spell-check type-check test",
    "dev": "NODE_ENV=development run-p server:dev",
    "fix": "run-p fix:*",
    "fix:config": "prettier .eslintrc.js ./*.js ./.storybook/*.js --write",
    "fix:json": "prettier ./*.json --write",
    "fix:pack": "fixpack",
    "fix:ts": "eslint './src/**/*.{ts,tsx}' --fix",
    "lint": "run-p lint:*",
    "lint:css": "stylelint './src/**/*.{ts,tsx}'",
    "lint:ts": "eslint './src/**/*.{ts,tsx}'",
    "server:dev": "nodemon",
    "server:prod": "ts-node --files ./src/bin/www/index.ts",
    "spell-check": "cspell './src/**/*.{ts,tsx}'",
    "start": "NODE_ENV=production run-s build:prod server:prod",
    "storybook": "start-storybook -p 3001 --no-dll",
    "test": "jest",
    "type-check": "tsc"
  },
  "dependencies": {
    "@apollo/client": "^3.2.5",
    "dotenv": "^8.2.0",
    "fastify": "^3.8.0",
    "fastify-compress": "^3.4.0",
    "fastify-helmet": "^5.0.3",
    "fastify-nextjs": "^5.1.0",
    "graphql": "^15.4.0",
    "next": "^10.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "remeda": "^0.0.27",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@storybook/addon-actions": "^6.0.28",
    "@storybook/addon-essentials": "^6.0.28",
    "@storybook/addon-links": "^6.0.28",
    "@storybook/react": "^6.0.28",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/styled-components": "^5.1.4",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "babel-loader": "^8.2.1",
    "cspell": "^4.1.5",
    "eslint": "^7.13.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fixpack": "^3.0.6",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-processor-styled-components": "^1.10.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "ts-node-paths": "^1.0.1",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{ts,tsx}": [
      "stylelint './src/**/*.{ts,tsx}'",
      "eslint './src/**/*.{ts,tsx}'",
      "cspell './src/**/*.{ts,tsx}'",
      "tsc -p ./tsconfig.json",
      "jest",
      "git add"
    ]
  }
}
